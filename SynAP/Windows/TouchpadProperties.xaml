<Window x:Name="Root"
        x:Class="SynAP.Windows.TouchpadProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SynAP.Windows"
        mc:Ignorable="d"
        Title="Your Touchpad"
        Width="400" Height="400">
    <Window.Resources>
        <Style TargetType="GroupBox">
            
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="MinHeight" Value="24"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="MinHeight" Value="18"/>
        </Style>
    </Window.Resources>
        
    <Grid>
        <Grid VerticalAlignment="Top" Height="50">
            <Label Content="Your Touchpad" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="20" FontWeight="SemiBold"/>
        </Grid>

        <StackPanel Margin="0,50,0,0">
            <Image Source="/SynAP;component/Resources/TouchpadDevice.png" Height="100"/>
            <GroupBox Header="Resolution">
                <Label />
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
